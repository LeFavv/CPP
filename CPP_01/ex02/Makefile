CC = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

NAME = Hi_this_is_brain
		
FILE =	main.cpp

RED = \033[0;31m
GREEN = \033[0;32m


SRC = ${FILE:.cpp=.o}

all : ${NAME}
	
${NAME}: ${SRC}
	@${CC} ${CFLAGS} -o $@ $^
	@echo "$(GREEN)ðŸ˜€Compilation termineeðŸ˜€$(GREEN)"


%.o:%.cpp
	@${CC} ${CFLAGS} -c $^

clean:
	@rm -f main.o
	@echo "$(RED)ðŸ§¹Supression des objetsðŸ§¹$(RED)"

fclean: clean
	@rm -f Hi_this_is_brain
	@echo "$(RED)ðŸ’€Supression de l'executableðŸ’€$(RED)"

re: fclean
	@make